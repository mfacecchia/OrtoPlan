<dialog id = "updateUser" class = "modal invisible" aria-hidden = "true">
    <div class = "modal-box">
        <form method = "dialog">
            <button class = "btn btn-sm btn-square btn-outline btn-primary rounded-md absolute right-2 top-2" tabindex = "-1">X</button>
        </form>
        <form id = "updateUserForm">
            <header>
                <b>Update user</b>
                <h1 class = "text-secondary">Update user information</h1>
                <hr class = "animate-showHide w-24 green-line mx-auto">
            </header>
            <input type = "text" name = "firstName" placeholder = "First Name" required>
            <input type = "text" name = "lastName" placeholder = "Last name" required>
            <div class = "flex inputStyleContainer">
                <input type = "email" name = "email" placeholder = "Email*" required>
                <div class = "tooltip tooltip-left tooltip-info flex items-center" data-tip = 'If you update your Email address, you will need to verificate it again.'>
                    <img class = "w-4 xl:w-5" src = "/assets/icons/info.svg" alt = "Information about updating email address" title = "About updating email address">
                </div>
            </div>
            <%- include('../partials/passwordField.partial.ejs', {fieldName: "oldPassword", placeholder: "Old Password", isRequired: false, isDialog: true}) %>
            <%- include('../partials/passwordField.partial.ejs', {placeholder: "New Password", isRequired: false, isDialog: true}) %>
            <%- include('../partials/passwordField.partial.ejs', {fieldName: "passwordVerify", placeholder: "Verify new password", isRequired: false, isDialog: true}) %>
            <button type = "submit">Update</button>
        </form>
    </div>
</dialog>