<dialog id = "updateUser" class = "modal">
    <div class = "modal-box">
        <form method = "dialog">
            <button class = "btn btn-sm btn-square btn-outline btn-primary rounded-md absolute right-2 top-2" tabindex = "0">X</button>
        </form>
        <form id = "updateUserForm">
            <header>
                <b>Update user</b>
                <h1 class = "text-secondary">Update user information</h1>
                <hr class = "animate-showHide w-24 green-line mx-auto">
            </header>
            <input type = "text" name = "firstName" placeholder = "First Name" required>
            <input type = "text" name = "lastName" placeholder = "Last name" required>
            <input type = "email" name = "email" placeholder = "Email*" required>
            <input type = "password" name = "oldPassword" placeholder = "Old Password">
            <input type = "password" name = "password" placeholder = "New Password">
            <input type = "password" name = "passwordVerify" placeholder = "Verify new password">
            <button type = "submit">Update</button>
        </form>
    </div>
</dialog>