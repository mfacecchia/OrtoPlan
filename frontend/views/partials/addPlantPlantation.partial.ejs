<dialog id = "<%if(typeof modalID !== 'undefined'){%><%=modalID%><%}else{%>newPlantPlantation<%}%>" <%if(typeof plantationID !== 'undefined'){%>data-plantation-id="<%=plantationID%>"<%}%> class = "modal">
    <div class = "modal-box">
        <form method = "dialog">
            <button class = "btn btn-sm btn-square btn-outline btn-primary rounded-md absolute right-2 top-2" tabindex = "-1">X</button>
        </form>
        <form id = "<%if(typeof modalID !== 'undefined'){%><%=modalID%><%}else{%>newPlantPlantation<%}%>Form">
            <header>
                <b>
                    <% if(typeof customHeader !== 'undefined'){ %>
                        <%= customHeader %>
                    <% }else{ %>
                        New plant/plantation
                    <% } %>
                </b>
                <h1 class = "text-secondary">
                    <% if(typeof customTitle !== 'undefined'){ %>
                        <%- customTitle %>
                    <% }else{ %>
                        Create a new plant/plantation
                    <% } %>
                </h1>
                <hr class = "animate-showHide w-24 green-line mx-auto">
            </header>
            <% formFields.forEach(field => { %>
                <%- field %>
            <% }) %>
        </form>
    </div>
</dialog>